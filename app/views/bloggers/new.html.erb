<ul>
    <%@blogger.errors.full_messages.each do |messages|%>
        <li><%=messages%></li>
    <%end%>
</ul>

<h1>New Blogger</h1>

<%= form_for @blogger do |f|%>
    <%=f.label :name%><br>
    <%=f.text_field :name%><br>

    <%=f.label :bio%><br>
    <%=f.text_field :bio%><br>

    <%=f.label :age%><br>
    <%=f.number_field :age%><br>

    <%= f.submit %>
<%end%>
